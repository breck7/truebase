{
  "name": "truebase",
  "version": "21.0.0",
  "description": "TrueBase is a system for long-term, collaborative, trustworthy semantic knowledge bases",
  "author": "Breck Yunits et al",
  "bin": {
    "truebase": "./cli.js"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "semi": false,
    "printWidth": 240,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=16.0"
  },
  "scripts": {
    "build": "tsc; ./tql/build.js",
    "test": "./test.js",
    "coverage": "tap ./test.js --coverage-report=lcov",
    "cloc": "cloc $(git ls-files | grep --extended-regexp --invert-match 'products|lib|package-lock')",
    "local": "./planetsDB/PlanetsDB.js startDevServer",
    "scrollBeta": "npm install ~/scroll",
    "jtreeBeta": "npm install ~/jtree",
    "perf": "time ./planetsDB/PlanetsDB.js testPerf"
  },
  "files": [
    "server/*",
    "browser/*",
    "tql/*"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/breck7/truebase"
  },
  "dependencies": {
    "autocompleter": "^8.0.3",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "jtree": "^75.1.1",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "numeral": "^2.0.6",
    "scroll-cli": "^71.4.0",
    "simple-git": "^3.17.0",
    "tap": "^16.3.4"
  },
  "devDependencies": {
    "@types/codemirror": "0.0.74",
    "@types/node": "^11.15.54",
    "ts-node": "^8.10.2",
    "typescript": "^4.9.5"
  }
}
