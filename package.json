{
  "name": "truebase",
  "version": "7.2.1",
  "description": "TrueBase is a system for long-term, collaborative, trustworthy semantic knowledge bases",
  "author": "Breck Yunits et al",
  "bin": {
    "truebase": "./cli.js"
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "semi": false,
    "printWidth": 240,
    "trailingComma": "none"
  },
  "scripts": {
    "build": "tsc; ./tql/build.js",
    "test": "./test.js",
    "coverage": "tap ./test.js --coverage-report=lcov",
    "cloc": "cloc $(git ls-files | grep --extended-regexp --invert-match 'products|lib|package-lock')",
    "local": "./planetsDB/PlanetsDB.js startDevServer"
  },
  "files": [
    "server/*",
    "browser/*",
    "tql/*"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/breck7/truebase"
  },
  "dependencies": {
    "express": "*",
    "jtree": "^69.4.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "scroll-cli": "^59.4.0",
    "simple-git": "^3.17.0"
  },
  "devDependencies": {
    "@types/codemirror": "0.0.74",
    "@types/node": "^11.15.54",
    "ts-node": "^8.10.2",
    "typescript": "^4.9.5"
  }
}
